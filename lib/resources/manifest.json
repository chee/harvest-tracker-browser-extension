{
  "manifest_version": 2,
  "name": "Harvest / PivotalTracker Browser Extension",
  "description": "The missing link between Harvest and PivotalTracker.",
  "author": "Michael Giuliana <mike@codeandcraft.nyc>",
  "homepage_url": "https://github.com/chee/harvest-tracker-browser-extension",
  "version": "0.3.0",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [{
    "matches": [
      "https://www.pivotaltracker.com/*"
    ],
    "js": [
      "bundle.js"
    ]
  }],
  "permissions": [
    "https://www.pivotaltracker.com/*",
    "https://*.harvestapp.com/*"
  ]
}
